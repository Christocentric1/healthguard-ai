# Cyber HealthGuard Frontend Environment Variables
# Copy this file to .env.local and update with your values

# Backend API URL
# For local development: http://localhost:8000
# For Railway production: https://cyber-guardian-ai-production-deb8.up.railway.app
# For homelab deployment: https://api.cyberwavesecurity.org
VITE_API_URL=http://localhost:8000

# Environment (development, staging, production)
VITE_ENV=development

# Enable mock data (true/false)
# Set to false to use real API instead of mock data
# DEFAULT: true (uses mock data - no backend required)
VITE_USE_MOCK_DATA=true
